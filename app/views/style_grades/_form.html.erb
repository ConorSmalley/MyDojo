<%= form_with(model: style_grade) do |form| %>
  <% if style_grade.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(style_grade.errors.count, "error") %> prohibited this style_grade from being saved:</h2>

      <ul>
        <% style_grade.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :style_id %>
    <%= form.collection_select(:style_id, Style.all, :id, :name) %>
    
  </div>

  <div class="field">
    <%= form.label :grade_id %>
    <%= form.collection_select(:grade_id, Grade.all, :id, :name) %>
  </div>

  <div class="field">
    <%= form.label :previous_grade %>
    <%= form.collection_select(:previous_grade, StyleGrade.all, :id, :nicename, :include_blank => true) %>
  </div>

  <div class="field">
    <%= form.label :next_grade %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
